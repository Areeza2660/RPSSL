<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="RPSSL_GUII.MainWindow"
        Title="RPSSL (først til 3)"
        Width="480" Height="360"
        Background="#f8f8f8"
        FontSize="16"
        FontFamily="Segoe UI"
        Foreground="#1f1f1f">

    <StackPanel Margin="16" Spacing="12">

        <!-- Titel -->
        <TextBlock Text="Rock · Paper · Scissors · Lizard · Spock"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>

        <!-- Rundeinfo -->
        <StackPanel>
            <TextBlock x:Name="RoundText" Text="Vælg en form for at starte…" />
            <TextBlock x:Name="ChoicesText" Text="Du: -   |   Agent: -" />
            <TextBlock x:Name="ScoreText" Text="Score — Du: 0 | Agent: 0" FontWeight="SemiBold"/>
        </StackPanel>

        <!-- Spilknapper -->
        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
            <Button x:Name="BtnRock"     Content="Rock"/>
            <Button x:Name="BtnPaper"    Content="Paper"/>
            <Button x:Name="BtnScissors" Content="Scissors"/>
            <Button x:Name="BtnLizard"   Content="Lizard"/>
            <Button x:Name="BtnSpock"    Content="Spock"/>
        </StackPanel>

        <!-- Nulstil og Luk -->
        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
            <Button x:Name="BtnReset" Content="Nulstil"/>
            <Button x:Name="BtnClose" Content="Luk"/>
        </StackPanel>

    </StackPanel>
</Window>
