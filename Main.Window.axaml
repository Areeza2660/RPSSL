<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="RPSSL.MainWindow"
        Width="400" Height="300"
        Title="Rock Paper Scissors Spock Lizard">

    <StackPanel Margin="20" Spacing="10">

        <TextBlock Text="Rock Paper Scissors Spock Lizard" FontSize="18" HorizontalAlignment="Center"/>

        <TextBlock Text="Choose your shape:" FontSize="14"/>

        <!-- IMPORTANT: WrapPanel DOES NOT SUPPORT Spacing in Avalonia 11.3 -->
        <WrapPanel Margin="0,5,0,10">
            <Button Content="Rock" Click="OnShapeClick"/>
            <Button Content="Paper" Click="OnShapeClick"/>
            <Button Content="Scissors" Click="OnShapeClick"/>
            <Button Content="Lizard" Click="OnShapeClick"/>
            <Button Content="Spock" Click="OnShapeClick"/>
        </WrapPanel>

        <Separator/>

        <TextBlock Name="TxtAgentChoice" Text="Agent chose: –" FontSize="14"/>
        <TextBlock Name="TxtResult" Text="Result: –" FontSize="16" FontWeight="Bold"/>
    </StackPanel>
</Window>
